<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/imageButton"
            style="@android:style/Widget.ImageButton"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:background="@color/colorAccentR"
            app:layout_constraintEnd_toStartOf="@+id/imageButton6"
            app:srcCompat="@drawable/ic_face_black_48dp"
            tools:layout_editor_absoluteY="322dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            style="@android:style/Widget.ImageButton"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:background="@color/colorAccentR"
            app:layout_constraintEnd_toStartOf="@+id/imageButton6"
            app:srcCompat="@drawable/ic_create_black_48dp"
            tools:layout_editor_absoluteY="322dp" />

        <ImageButton
            android:id="@+id/imageButton3"
            style="@android:style/Widget.ImageButton"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/colorAccentR"
            android:cropToPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/imageButton6"
            app:srcCompat="@drawable/ic_search_black_48dp"
            tools:layout_editor_absoluteY="322dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            style="@android:style/Widget.ImageButton"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/colorAccentR"
            android:cropToPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/imageButton6"
            app:srcCompat="@drawable/ic_turned_in_not_black_48dp"
            tools:layout_editor_absoluteY="322dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>